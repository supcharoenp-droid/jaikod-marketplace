# ===============================================
# JaiKod Environment Variables - COMPLETE
# Copy this file to .env.local and fill in your values
# ===============================================

# ==========================================
# FIREBASE CONFIGURATION (Required)
# Get from: Firebase Console > Project Settings > General
# ==========================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123

# Firebase Admin SDK (Server-side only)
# Get from: Firebase Console > Project Settings > Service Accounts
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# ==========================================
# AI / OPENAI CONFIGURATION (Required for AI features)
# Get from: https://platform.openai.com/api-keys
# ==========================================
OPENAI_API_KEY=sk-your_openai_api_key_here

# ==========================================
# PAYMENT GATEWAY (Optional - Enable when ready)
# ==========================================

# Omise (Thailand) - https://www.omise.co
OMISE_PUBLIC_KEY=pkey_test_xxxxx
OMISE_SECRET_KEY=skey_test_xxxxx

# Stripe (International)
# STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
# STRIPE_SECRET_KEY=sk_test_xxxxx

# ==========================================
# EMAIL SERVICE (Optional - For notifications)
# ==========================================

# SendGrid - https://sendgrid.com
SENDGRID_API_KEY=SG.xxxxx
SENDGRID_FROM_EMAIL=noreply@jaikod.com

# ==========================================
# GOOGLE SERVICES (Optional)
# ==========================================

# Google Maps API (for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIza_xxxxx

# ==========================================
# LINE INTEGRATION (Optional)
# ==========================================

# LINE Login
LINE_CHANNEL_ID=xxxxx
LINE_CHANNEL_SECRET=xxxxx

# ==========================================
# SHOPEE AFFILIATE (Optional - for price reference)
# ==========================================
SHOPEE_PARTNER_ID=your_shopee_partner_id
SHOPEE_PARTNER_KEY=your_shopee_partner_key

# ==========================================
# SITE CONFIGURATION
# ==========================================

NEXT_PUBLIC_SITE_URL=https://jaikod.com
NEXT_PUBLIC_SITE_NAME=JaiKod
NEXT_PUBLIC_DEFAULT_LOCALE=th

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# JWT Secret (for custom tokens)
JWT_SECRET=your_super_secret_jwt_key_here
